<% if notice.present? %>
<div class="notice-aux bg-indigo-500 fixed">
    <p class="mt-2 ml-2 py-2 px-3 bg-blue-50 mb-5 text-blue-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
</div>
<% end %>

<div class="pb-32 flex flex-col items-center justify-center min-h-screen bg-indigo-500">
    <%= render(HeaderComponent.new("Soundcloud", "Share your music with the world!")) do %>
    <% if current_user %>
    <%= link_to "Sign Out", destroy_user_session_path, class: "bg-purple-500 text-purple-100 p-2 rounded-lg w-32 text-center",
          data: { turbo_method: :delete } %>
    <% else %>
    <%= link_to "Sign in", new_user_session_path, class: "bg-green-500 text-green-100 p-2 rounded-lg w-32 text-center" %>
    <% end %>
    <% end %>
</div>